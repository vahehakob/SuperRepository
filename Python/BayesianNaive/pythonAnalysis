import io
import os
import csv 


def uniq(input):
  output = []
  for x in input:
    if x not in output:
      output.append(x)
  return output


def ImportFile( filename ):
	readinlines = []
	for line in  list( tuple(open(filename, 'r')) ):
		tmp_line = CorrLine( line.split() ) # file correct: fields 4 and 7 are not regular and disregarded!!!
		readinlines.append(tmp_line)
	return readinlines


def CorrLine( linename ):
	#print linename[4]
	if len(linename) != 13:
		if linename[4] not in ['false', 'true']:
			linename.insert(3,"None")
		elif linename[8] not in ['false', 'true']:
			linename.insert(6,"None")
	return	linename


def GetList( mylist, num ):
	GetList = uniq([row[num] for row in megaList])
	return GetList
